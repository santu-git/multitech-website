	%section#courses.pt64
		%div.flex-row.flex-j-c
			= image_tag('undraw_education.svg', alt: '', height: 85, width: 120, class: '')
		%div.flex-row.flex-j-c
			.title.blue-dark Discover our diverse study centers for quality education.
		%div.px-48.row
			- @courses&.each do |course|
				.col.s12.m6.l3.mb20
					.card-style-1.white-background.rounded-border-5.on-hover-drop-shadow.on-hover-zoom
						.flex-row.flex-j-c
							%i.material-icons.school
						.flex-row.flex-j-c.font12.fontw600= course.name
