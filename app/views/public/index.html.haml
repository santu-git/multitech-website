						.flex-row.flex-j-c.font12.text-muted
						.flex-row.flex-j-c.mt10
							- if course.syllabus.attached?
								%a.btn.small.green.center-align{ href: url_for(course.syllabus), download: true }
									%span.white-text Syllabus
									%i.material-icons.right arrow_downward
